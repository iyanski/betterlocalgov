        "GABI",
        "KANGKONG",
        "KAIMITO",
        "SAGING",
        "KAPAYAS",
        "TUGAS",
        "SACRED HEART",
        "LEMONSITO",
        "AMPALAYA",
        "TAMBIS",
        "NANGKA",
        "KALABASA",
        "NANGKA-LUMOY",
        "MANGGA"
