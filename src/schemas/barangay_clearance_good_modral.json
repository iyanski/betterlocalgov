      "type": "string",
      "title": "Address"
    },
    "city": {
      "type": "string",
      "title": "City"
    },
    "province": {
      "type": "string",
      "title": "Province"
    },
    "residency_start_month": {
      "type": "integer",
      "title": "Started living here (month)"
