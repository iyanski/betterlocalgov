      "type": "string",
      "title": "Middle Name"
    },
    "last_name": {
      "type": "string",
      "title": "Last Name"
    },
    "suffix": {
      "type": "string",
      "title": "Suffix"
    },
    "birthdate": {
      "type": "string",
      "title": "Date of Birth"
