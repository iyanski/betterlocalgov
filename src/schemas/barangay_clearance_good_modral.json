    "civil_status": {
      "type": "array",
      "title": "Civil Status",
      "enum": ["SINGLE", "MARRIED", "WIDOWED", "SEPARATED"]
    },
    "gender": {
      "type": "string",
      "title": "Gender",
      "enum": ["MALE", "FEMALE"]
