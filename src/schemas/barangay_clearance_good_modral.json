{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Barangay Clearance for Good Moral",
  "properties": {
    "purpose": {
      "type": "array",
      "title": "Purpose",
      "enum": [
        "EMPLOYMENT - LOCAL EMPLOYMENT - ABROAD",
        "IDENTIFICATION DATA",
        "LIVE BIRTH",
